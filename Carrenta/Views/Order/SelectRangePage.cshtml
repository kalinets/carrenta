
@{
  ViewBag.Title = "Select Date Range";
}

<h2>Select Date Range</h2>

@using (Html.BeginForm("SelectRangeResult", "Order", FormMethod.Post))
{
  <div class="form-group">
    <input type="date" name="firstdate" value="" class="form-control" />
  </div>

  <div class="form-group">
    <input type="date" name="lastdate" value="" class="form-control" />
  </div>

  <input type="reset" class="btn btn-dark">

  <input type="submit" value="View Orders" class="btn btn-success" />
}