@{
  ViewBag.Title = "Create Order";
}

<h2>@ViewBag.Title</h2>

@using (Html.BeginForm("Create", "Order", FormMethod.Post))
{
  <input type="hidden" value="@ViewBag.CarID" name="carID" />
  <input type="hidden" value="@ViewBag.userID" name="userID" />
  <div class="form-group">
    <label>
      Choose start day:
      <input type="date" name="dateStart" id="datestart" required />
    </label>
  </div>

  <div class="form-group">
    <label>
      Choose end day:
      <input type="date" name="dateEnd" id="dateend" required />
    </label>
  </div>
  <input type="reset" class="btn btn-dark">

  <input type="submit" value="Place order" class="btn btn-success" />
}

<script>
  var today = new Date().toISOString().split('T')[0];
  document.getElementById("datestart").setAttribute('min', today);
</script>