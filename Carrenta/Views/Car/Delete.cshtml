@model Carrenta.Models.Car

@{
  ViewBag.Title = "Delete car?";
}

<h3>Are you sure you want to delete this car?</h3>

<div>
  <dl class="dl-horizontal">
    <dt>Car name</dt>
    <dd>@Model.brand</dd>
    <dt>Year</dt>
    <dd>@Model.year</dd>
    <dt>Body</dt>
    <dd>@Model.body</dd>
    <dt>Price</dt>
    <dd>$ @Model.price</dd>
    <dt></dt>
    <dd>
      @{
        string imageDataURL;
        if (Model.imageData != null)
        {
          string imageBase64Data = Convert.ToBase64String(Model.imageData);
          imageDataURL = string.Format("data:image/jpg;base64,{0}", imageBase64Data);
          <img src="@imageDataURL" alt="Car Image" class="car-image-delete" />
        }
        else
        {
          <em>no image available</em>
        }
      }
    </dd>
  </dl>

  @using (Html.BeginForm())
  {
    @Html.AntiForgeryToken()
    <div class="form-actions no-color">
      <input type="submit" value="Delete" class="btn btn-danger" />
    </div>
  }
</div>